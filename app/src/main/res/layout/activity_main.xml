<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="test233.leo.com.test233.MainActivity">

        <TextView
            android:id="@+id/topShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="50sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="263dp" />


        <Button
        android:id="@+id/change_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_change"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/topShow"
        app:layout_constraintLeft_toLeftOf="@id/topShow"
        tools:layout_editor_absoluteX="132dp"
        android:layout_marginBottom="43dp" />

        <Button
            android:id="@+id/change_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_change2"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@id/change_text"
            app:layout_constraintLeft_toLeftOf="@id/change_text"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="176dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="@id/change_text2"
            app:layout_constraintTop_toBottomOf="@id/change_text2"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="366dp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="此处输入"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="@id/textView3"
            app:layout_constraintTop_toBottomOf="@id/textView3"
            android:layout_marginTop="-405dp"
            android:layout_marginRight="-368dp" />

        <Button
            android:id="@+id/getTextandShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_change3"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="@id/editText"
            app:layout_constraintTop_toBottomOf="@id/editText"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="305dp" />




</android.support.constraint.ConstraintLayout>
